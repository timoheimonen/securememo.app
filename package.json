{
  "name": "cloudflare-workers-d1",
  "version": "1.1.0",
  "description": "Cloudflare Workers with D1 database project",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env dev",
    "deploy:prod": "wrangler deploy",
    "db:create": "wrangler d1 create my-database",
    "db:migrate": "wrangler d1 execute my-database --file=./db/schema.sql",
  "audit": "npm audit",
  "audit:high": "npm audit --audit-level=high",
  "lint": "eslint src/",
  "lint:fix": "eslint src/ --fix",
  "lint:security": "eslint --ext .js src/",
  "test": "vitest run",
  "test:coverage": "vitest run --coverage",
  "test:lifecycle": "node tests/memo.lifecycle.test.js"
  },
  "devDependencies": {
  "wrangler": "^4.33.1",
  "eslint": "^8.57.0",
  "eslint-plugin-security": "^1.7.1",
  "vitest": "^1.6.1",
  "@vitest/coverage-v8": "^1.6.1"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "d1",
    "database"
  ],
  "author": "Timo Heimonen",
  "license": "GNU General Public License v3.0"
}
